<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradienbackroud"
    tools:context=".EditKotaActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="DATA SUPIR"
                android:textSize="26sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Supir :"
                    android:textSize="18dp" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edit_nama_supir"
                    android:layout_width="100pt"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Nama Supir"
                    android:inputType="text"
                    android:minHeight="48dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Supir :"
                    android:textSize="18dp" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edit_email_supir"
                    android:layout_width="100pt"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Email Supir"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor HP Supir :"
                    android:textSize="18dp" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edit_hp_supir"
                    android:layout_width="100pt"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Nomor HP Supir"
                    android:inputType="phone"
                    android:minHeight="48dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password :"
                    android:textSize="18dp" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edit_password_supir"
                    android:layout_width="100pt"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Password"
                    android:inputType="textPassword"
                    android:minHeight="48dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Konf. Password :"
                    android:textSize="18dp" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edit_password_confirm_supir"
                    android:layout_width="100pt"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Konfirmasi Password"
                    android:inputType="textPassword"
                    android:minHeight="48dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_edit_save"
                    android:layout_width="143dp"
                    android:layout_height="53dp"
                    android:text="SIMPAN"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>